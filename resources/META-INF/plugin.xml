<idea-plugin>
    <id>com.your.company.unique.plugin.id</id>
    <name>Barrels</name>
    <version>1.0</version>
    <vendor email="starzec.piotr.12@gmail.com">Starzec Piotr</vendor>

    <description>Plugin that adds index files for JavaScript and TypeScript</description>

    <!--    <change-notes><![CDATA[-->
    <!--      Add change notes here.<br>-->
    <!--      <em>most HTML tags may be used</em>-->
    <!--    ]]>-->
    <!--    </change-notes>-->

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
    <idea-version since-build="173.0"/>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <group id="com.starzec.piotr.CreateBarrelGroup" class="com.starzec.piotr.CreateBarrelGroup" popup="true"
               text="Create Barrel" description="Creates barrel for selected language">
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewFile"/>

            <action id="com.starzec.piotr.CreateTypeScriptBarrelAction" class="com.starzec.piotr.CreateTypeScriptBarrelAction"
                    text="TypeScript Barrel" description="Create index.ts fle">
            </action>

            <action id="com.starzec.piotr.CreateJavaScriptBarrelAction" class="com.starzec.piotr.CreateJavaScriptBarrelAction"
                    text="JavaScript Barrel" description="Create index.js fle">
            </action>

            <action id="com.starzec.piotr.CreateScssBarrelAction" class="com.starzec.piotr.CreateScssBarrelAction"
                    text="SCSS Barrel" description="Create _index.scss fle">
            </action>
        </group>
    </actions>

</idea-plugin>
